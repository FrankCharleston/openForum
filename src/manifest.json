{
    "manifest_version": 3,
    "name": "OpenForum",
    "version": "0.1",
    "description": "A decentralized overlay for encrypted messages on public forums.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["*://www.reddit.com/*"],
    "web_accessible_resources": [
        {
            "resources": ["crypto-js.min.js"],
            "matches": ["<all_urls>"]
        }
    ],
    "content_scripts": [
        {
            "matches": ["*://www.reddit.com/*"],
            "js": ["crypto-js.min.js", "decentraloverlay.js"],
            "run_at": "document_idle"
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
