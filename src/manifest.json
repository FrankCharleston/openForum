{
    "manifest_version": 3,
    "name": "OpenForum",
    "version": "0.1",
    "description": "A decentralized overlay for encrypted messages on public forums.",
    "permissions": ["storage", "activeTab", "scripting"],
    "host_permissions": ["*://www.reddit.com/*"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["*://www.reddit.com/*"],
            "js": ["crypto-js.min.js", "decentraloverlay.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    }
}
