{
  "manifest_version": 3,
  "name": "OpenForum",
  "version": "1.0",
  "description": "A decentralized encryption tool for forums.",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "clipboardWrite",
    "clipboardRead",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["crypto-js.min.js", "decentraloverlay.js", "content_script.js", "background.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.png"
  }
}
