{
    "manifest_version": 3,
    "name": "OpenForum",
    "version": "1.0",
    "description": "A decentralized encryption-decryption extension for online forums.",
    "permissions": [
      "clipboardRead",
      "clipboardWrite",
      "contextMenus",
      "storage",
      "scripting",
      "activeTab"
    ],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["decentraloverlay.js"],
        "run_at": "document_idle"
      }
    ]
  }
  