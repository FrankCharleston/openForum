{
  "manifest_version": 3,
  "name": "OpenForum",
  "version": "1.0",
  "description": "A decentralized encryption tool for forums.",
  "permissions": ["contextMenus", "storage", "scripting", "clipboardWrite", "clipboardRead"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  }
}
