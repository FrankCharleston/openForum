{
    "manifest_version": 3,
    "name": "OpenForum",
    "version": "1.0",
    "description": "A decentralized overlay for encrypted messages on public forums.",
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "storage",
        "activeTab",
        "scripting",
        "clipboardRead",
        "clipboardWrite",
        "contextMenus",
        "notifications"
    ]
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["crypto-js.min.js", "content.js"]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "web_accessible_resources": [
        {
            "resources": ["crypto-js.min.js"],
            "matches": ["<all_urls>"]
        }
    ]
}
