{
  "manifest_version": 3,
  "name": "OpenForum",
  "version": "1.0",
  "description": "A decentralized encryption tool for forums.",
  "permissions": [
      "contextMenus",
      "storage",
      "scripting",
      "clipboardWrite",
      "clipboardRead",
      "activeTab"
  ],
  "host_permissions": ["*://*/*"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["crypto-utils.js", "decentraloverlay.js", "content_script.js", "content.js"],
      "run_at": "document_end",
      "type": "module"
    }
  ],
  "action": {
      "default_popup": "popup.html",
      "default_icon": "icons/icon.png"
  }
}