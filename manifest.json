{
  "manifest_version": 3,
  "name": "OpenForum",
  "version": "1.1.1",
  "description": "A simple forum encryption/decryption extension",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "tabs",
    "clipboardWrite",
    "clipboardRead"
  ],
  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "lib/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["lib/content_script.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon-16.png",
      "48": "assets/icon-48.png",
      "128": "assets/icon-128.png"
    }
  },
  "options_page": "options/options.html",
  "web_accessible_resources": [
    {
      "resources": [
        "assets/icon-16.png",
        "assets/icon-48.png",
        "assets/icon-128.png",
        "assets/icon-enabled-16.png",
        "assets/icon-enabled-48.png",
        "assets/icon-enabled-128.png",
        "assets/icon-green-16.png",
        "assets/icon-green-48.png",
        "assets/icon-green-128.png",
        "lib/crypto-js.min.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "assets/icon-16.png",
    "48": "assets/icon-48.png",
    "128": "assets/icon-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
