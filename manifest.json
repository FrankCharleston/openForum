{
  "manifest_version": 3,
  "name": "OpenForum",
  "version": "1.3",
  "description": "A simple forum encryption/decryption extension",
  "permissions": [
    "storage",
    "contextMenus",
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://*.example.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": ["https://*.example.com/*"],
      "js": ["content_script.js", "crypto-js.min.js"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },

  "options_page": "options.html",

  "web_accessible_resources": [
    {
      "resources": ["icon.png"],
      "matches": ["https://*.example.com/*"]
    }
  ],

  "default_locale": "en",

  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}