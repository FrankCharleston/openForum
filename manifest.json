{
  "manifest_version": 3,
  "name": "OpenForum",
  "version": "1.0",
  "permissions": ["storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["crypto-utils.js", "crypto-js.min.js", "content.js", "content_script.js", "decentraloverlay.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["crypto-js.min.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
