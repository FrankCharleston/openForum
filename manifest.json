{
  "manifest_version": 3,
  "name": "OpenForum",
  "version": "1.0",
  "permissions": [
    "contextMenus",
    "storage",
    "scripting",
    "clipboardWrite",
    "clipboardRead",
    "activeTab"
  ],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}
